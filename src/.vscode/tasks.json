{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "reset;cd ..;mkdir proj_debug;cd proj_debug;cmake -DCMAKE_BUILD_TYPE=Debug ..;make -j6",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "windows":{
                "command": "cd ..;New-Item -Force -ItemType directory -Path proj_debug;cd proj_debug;cmake -A x64 ..;msbuild /p:Configuration=Debug /property:GenerateFullPaths=true /t:build TSL.sln"
            }
        },
        {
            "label": "Re-Build (Debug)",
            "type": "shell",
            "command": "reset;cd ..;rm -rf proj_debug;mkdir proj_debug;cd proj_debug;cmake -DCMAKE_BUILD_TYPE=Debug ..;make clean;make -j6",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "windows":{
                "command": "cd ..;New-Item -Force -ItemType directory -Path proj_debug;cd proj_debug;cmake -A x64 ..;msbuild /p:Configuration=Debug /property:GenerateFullPaths=true /t:clean,build TSL.sln"
            }
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "reset;cd ..;mkdir proj_release;cd proj_release;cmake -DCMAKE_BUILD_TYPE=Release ..;make -j6",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "windows":{
                "command": "cd ..;New-Item -Force -ItemType directory -Path proj_release;cd proj_release;cmake -A x64 ..;msbuild /p:Configuration=Release /property:GenerateFullPaths=true /t:build TSL.sln"
            }
        },
        {
            "label": "Re-Build (Release)",
            "type": "shell",
            "command": "reset;cd ..;rm -rf proj_release;mkdir proj_release;cd proj_release;cmake -DCMAKE_BUILD_TYPE=Release ..;make clean;make -j6",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "windows":{
                "command": "cd ..;New-Item -Force -ItemType directory -Path proj_release;cd proj_release;cmake -A x64 ..;msbuild /p:Configuration=Release /property:GenerateFullPaths=true /t:clean,build TSL.sln"
            }
        },
    ]
}